namespace WhileTest2
{
    internal class WhileTest2
    {
        static void Main(string[] args)
        {
            while(true) // 무한 루프
            {
                Console.Write("계속 진행하겠습니까?(n: 종료)");
                string str = Console.ReadLine();

                if(str=="n")
                {
                    break;
                }

                Console.WriteLine("진행중.....");
            }
            Console.WriteLine("프로그램이 종료됩니다.");
        }
    }
}
